<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question1">

    <ToggleButton
        android:id="@+id/icedButton"
        android:layout_width="139dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Iced"
        android:textOn="Iced"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1Text"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/toggle_button_selector" />

    <ToggleButton
        android:id="@+id/hotButton"
        android:layout_width="139dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/toggle_button_selector"
        android:text="ToggleButton"
        android:textOff="Hot"
        android:textOn="Hot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icedButton"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/question1Text"
        android:layout_width="297dp"
        android:layout_height="80dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Do you prefer your coffee iced or hot?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />


</androidx.constraintlayout.widget.ConstraintLayout>